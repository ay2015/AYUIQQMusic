                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Grid x:Name="cunchu1">
            <Grid.DataContext>
                <local:AyHorizonDropHandler/>
            </Grid.DataContext>
        </Grid>
     
    </Grid>
</Window>
